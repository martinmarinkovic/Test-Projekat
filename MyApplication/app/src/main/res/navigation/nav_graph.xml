<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_notes">

    <fragment
        android:id="@id/nav_notes"
        android:name="com.martinmarinkovic.myapplication.NotesFragment"
        android:label="fragment_notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/actionAddNote"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.martinmarinkovic.myapplication.AddNoteFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_add_note" >
        <action
            android:id="@+id/actionSaveNote"
            app:destination="@id/nav_notes" />
        <action
            android:id="@+id/actionOpenPopUp"
            app:destination="@id/popUpFragment" />
        <argument
            app:argType="com.martinmarinkovic.myapplication.roomdb.Note"
            android:name="Note"
            app:nullable="true"
            android:defaultValue="@null" />
 <!--       <argument
            android:name="Image"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />-->
    </fragment>
    <dialog
        android:id="@+id/popUpFragment"
        android:name="com.martinmarinkovic.myapplication.PopUpFragment"
        android:label="fragment_pop_up"
        tools:layout="@layout/fragment_pop_up" >
        <action
            android:id="@+id/actionAddFileToNote"
            app:destination="@id/addNoteFragment" />
        <argument
            app:argType="com.martinmarinkovic.myapplication.roomdb.Note"
            android:name="Note"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/openAudioRecorder"
            app:destination="@id/audioRecorderFragment" />
    </dialog>
    <fragment
        android:id="@id/nav_wallpaper"
        android:name="com.martinmarinkovic.myapplication.WallpaperFragment"
        android:label="fragment_wallpaper"
        tools:layout="@layout/fragment_wallpaper" />
    <fragment
        android:id="@id/nav_lock_screen"
        android:name="com.martinmarinkovic.myapplication.LockScreenFragment"
        android:label="fragment_lock_screen"
        tools:layout="@layout/fragment_lock_screen" />
    <fragment
        android:id="@+id/audioRecorderFragment"
        android:name="com.martinmarinkovic.myapplication.AudioRecorderFragment"
        android:label="fragment_audio_recorder"
        tools:layout="@layout/fragment_audio_recorder" >
        <action
            android:id="@+id/actionSaveAudioFile"
            app:destination="@id/popUpFragment" />
        <argument
            app:argType="com.martinmarinkovic.myapplication.roomdb.Note"
            android:name="Note"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>